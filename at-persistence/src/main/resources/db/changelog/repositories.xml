<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1" author="stp">
        <createSequence cycle="false"
                        incrementBy="50"
                        sequenceName="repository_id_seq"
                        startValue="1"/>

        <createTable tableName="repositories">
            <column name="repository_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="vcs" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="project" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(8192)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="varchar(8192)" />

            <column name="clone_url" type="varchar(8192)">
                <constraints nullable="false"/>
            </column>

            <column name="analysed_at" type="DATETIME" />
        </createTable>
    </changeSet>

</databaseChangeLog>
